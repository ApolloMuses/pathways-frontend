{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "__BUILD": true,
        "__CONFIG": true
    },
    "rules": {
        "strict": 0,
        "no-var": "warn",
        "no-unused-vars": ["warn", {"caughtErrors": "none"}],
        "no-console": ["warn", {"allow": ["debug", "info", "log", "warn", "error"]}],
        "no-fallthrough": ["error", {"commentPattern": "(break[\\s\\w]*omitted|falls?\\s?through)"}],
        "react/display-name": "off"
    },
    "plugins": [
        "react"
    ]
}
